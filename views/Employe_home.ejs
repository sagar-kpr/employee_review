<link rel="stylesheet" href="/css/userprofile.css">

<main>
    <aside>
        <div id="image">
            <img src="/images/blank.webp">
        </div>
        <div id="name">
            <span><%= user.employe_name%></span>
        </div>
        <div id="status">
            <div id="review">
                <span>Review :</span>
                <span>0</span>
            </div>
        </div>
    </aside>
    <section>
        <div id="total-user">
            <h2>Users to be reviewed</h2>
        </div>
        <div id="employes-box">
            <% if(user.assign.length != 0) {%>
                <% for(list of employe) { %>
                    <% for(assigned of user.assign) { %>
                        <% if(list.id == assigned){ %>
                            <div class="employes">
                                <div id="employes-name">
                                    <h3><%= list.employe_name %></h3>
                                </div>
                            </div>
                        <% } %> 
                    <% } %>
                <% } %>   
            <% } %>    
        </div>      
    </section>    
</main>